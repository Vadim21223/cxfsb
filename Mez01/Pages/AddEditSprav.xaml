<Page x:Class="Mez01.Pages.AddEditSprav"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mez01.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditSprav">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Марка" Margin="5"/>
            <TextBox MaxLength="30" Margin="5" Text ="{Binding Marka }"/>
            <TextBlock Text="Модель" Margin="5"/>
            <TextBox  MaxLength="30" Margin="5" Text ="{Binding Model }"/>
            <TextBlock  Text="Цена" Margin="5"/>
            <TextBox MaxLength="12" x:Name="prise" Text="{Binding Price}" Margin="5"/>
            <Button x:Name="SaveBtn" Content="Сохранить" Margin="5" Width="150" Height="30" Click="SaveBtn_Click"/>
            <Button x:Name="BackBtn" Content="Отменить" Margin="5" Width="150" Height="30" Click="BackBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
